{
    "manifest_version": 2,
  
    "name": "Studio Ghibli Player",
    "description": "Plays soundtracks from Studio Ghibli Movies",
    "version": "1.0",
  
    "permissions": [
      "tabs"
    ],
  
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
  
    "browser_action": {
      "default_icon": "ghibli.png"
    }
  }